
<section>
    <div class="container my-4">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-4">
                <a class="btn btn-primary btn-sm mb-4" href="/">Back</a>
                <div class="card">
                    <div class="card-body">
                        <img class="shadow-sm" src="/products/<%= products.productPhoto %>" alt="">
                        <h5 class="my-4 text-center"><strong><%= products.name %></strong></h5>
                        <div class="price"> 
                            <div class="row">
                                <div class="col-md-6 border p-2">
                                    <span>Regular Price <%= products.reglurPrice %> BDT</span>
                                </div>
                                <div class="col-md-6 border text-end p-2 border-start-0">
                                    <span>Sell Price <%= products.sellPrice %> BDT</span>
                                </div>
                            </div>
                        </div>
                        <div class="my-3 text-center">
                            <button disabled="disabled" class="btn btn-danger">Add To Cart <i class="fa-sharp fa-solid fa-cart-shopping"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
